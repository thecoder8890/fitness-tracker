<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Mygoal_ftActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include layout="@layout/mygoal_ft_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:layout_marginTop="24.5dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:fontFamily="@font/sfpro_display_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_gravity="center"
            android:textColor="@color/darkblack"
            android:textSize="19sp"/>

        <TextView
            android:fontFamily="@font/sfprodisplay_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workouts"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkblack"
            android:textSize="16.5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:fontFamily="@font/sfpro_display_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350"
                android:layout_gravity="center"
                android:textColor="@color/darkblack"
                android:textSize="19sp"/>

            <TextView
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KCAL"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkblack"
                android:layout_gravity="center"
                android:textSize="16.5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:fontFamily="@font/sfpro_display_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:layout_gravity="center"
                android:textColor="@color/darkblack"
                android:textSize="19sp"/>

            <TextView
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkblack"
                android:layout_gravity="center"
                android:textSize="16.5sp"/>
        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly goal"
        android:textSize="15sp"
        android:fontFamily="@font/sfpro_display_medium"
        android:layout_marginLeft="13.5dp"
        android:letterSpacing="0.0625"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkblack"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_marginTop="12.5dp"
            android:paddingRight="12dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="13.7dp"
        android:layout_marginRight="13.7dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        card_view:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/full_body"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:src="@drawable/fullbody"/>

            <TextView
                android:id="@+id/text_body"
                android:fontFamily="@font/sfpro_display_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Body"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:letterSpacing="0.0625"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="16.7dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_challenge"
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.0625"
                android:text="7X4 Challenge"
                android:textSize="11.7sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15.7dp"
                android:layout_marginLeft="16.7dp"
                android:textColor="@color/white"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="105dp"
                android:layout_marginRight="10dp">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circle_progress"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    app:cpb_progressbar_width="5dp"
                    app:cpb_background_progressbar_color="#ff6215"
                    app:cpb_background_progressbar_width="5dp" />
                <TextView
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="65%"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Complete"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </FrameLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_tab"
        app:bb_titleTypeFace="fonts/roboto_regular.ttf"/>

</RelativeLayout>