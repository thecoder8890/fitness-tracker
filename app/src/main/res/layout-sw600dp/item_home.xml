<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="13.7dp"
        android:layout_marginRight="13.7dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/full_body"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/fullbody"/>

            <TextView
                android:id="@+id/text_body"
                android:fontFamily="@font/sfpro_display_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Body"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="16.7dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_challenge"
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7X4 Challenge"
                android:textSize="11.7sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12.7dp"
                android:layout_marginLeft="16.7dp"
                android:textColor="@color/white"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>